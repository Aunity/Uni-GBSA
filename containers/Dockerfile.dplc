FROM docker.io/dpzhengh/hmtpbsa:hmtpbsa-v1

RUN /bin/bash -c "source ~/.bashrc"  && \
    conda activate amber21           && \
    pip install acpype               && \
    pip install gmx_MMPBSA==1.5.2    && \
    cp ./ /data/                     && \
    cd /data/                        && \ 
    python setup.py install          && \
    rm -rf /data/*
